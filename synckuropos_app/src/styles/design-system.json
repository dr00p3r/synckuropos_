{
  "name": "SyncKuroPOS Design System",
  "version": "1.0.0",
  "description": "Sistema de diseño global para SyncKuroPOS - Preparado para migración a Tailwind CSS",
  "author": "SyncKuroPOS Team",
  "structure": {
    "colors": {
      "primary": {
        "default": "#2A423E",
        "light": "#547771",
        "dark": "#1f332f",
        "hover": "#456962"
      },
      "text": {
        "primary": "#374151",
        "secondary": "#6b7280",
        "muted": "#9ca3af",
        "light": "#F0EFE7",
        "white": "#ffffff"
      },
      "background": {
        "primary": "#ffffff",
        "secondary": "#f8fafc",
        "tertiary": "#f1f5f9",
        "muted": "#f9fafb",
        "dark": "#f5f5f5"
      },
      "status": {
        "success": "#16a34a",
        "error": "#dc2626",
        "warning": "#f59e0b",
        "info": "#3b82f6"
      },
      "inventory": {
        "stockNormal": "#dcfce7",
        "stockLow": "#fef3c7",
        "stockZero": "#fee2e2",
        "outOfStock": "#ffebee"
      }
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    },
    "typography": {
      "fontFamily": {
        "primary": "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif",
        "mono": "'Courier New', monospace"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2rem"
      },
      "fontWeight": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeight": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75
      }
    },
    "borderRadius": {
      "sm": "4px",
      "md": "6px",
      "lg": "8px",
      "xl": "12px",
      "2xl": "16px",
      "round": "50%",
      "pill": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 2px 8px rgba(0, 0, 0, 0.05)",
      "lg": "0 4px 12px rgba(0, 0, 0, 0.1)",
      "xl": "0 6px 16px rgba(0, 0, 0, 0.2)",
      "2xl": "0 20px 40px rgba(0, 0, 0, 0.15)",
      "button": "0 2px 8px rgba(42, 66, 62, 0.2)",
      "buttonHover": "0 4px 12px rgba(42, 66, 62, 0.3)"
    },
    "transitions": {
      "fast": "0.15s ease",
      "normal": "0.2s ease",
      "slow": "0.3s ease",
      "all": "all 0.2s ease",
      "colors": "color 0.2s ease, background-color 0.2s ease, border-color 0.2s ease",
      "transform": "transform 0.3s ease"
    },
    "breakpoints": {
      "sm": "480px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    },
    "zIndex": {
      "dropdown": 1000,
      "sticky": 1020,
      "fixed": 1030,
      "modalBackdrop": 1040,
      "modal": 1050,
      "popover": 1060,
      "tooltip": 1070,
      "toast": 1080
    }
  },
  "components": {
    "buttons": [
      "btn-base",
      "btn-primary",
      "btn-secondary",
      "btn-success",
      "btn-error",
      "btn-ghost",
      "btn-sm",
      "btn-lg",
      "btn-disabled"
    ],
    "forms": [
      "form-field",
      "form-label",
      "form-input",
      "form-textarea"
    ],
    "layout": [
      "card",
      "card-header",
      "card-body",
      "card-footer",
      "table-container",
      "table",
      "table-header",
      "table-cell",
      "table-row"
    ],
    "utilities": [
      "text-xs",
      "text-sm",
      "text-base",
      "text-lg",
      "font-normal",
      "font-medium",
      "font-semibold",
      "font-bold",
      "m-0",
      "m-xs",
      "m-sm",
      "m-md",
      "p-0",
      "p-xs",
      "p-sm",
      "p-md",
      "flex",
      "flex-col",
      "items-center",
      "justify-between",
      "grid",
      "grid-cols-1",
      "grid-cols-2",
      "gap-xs",
      "gap-sm",
      "gap-md"
    ],
    "states": [
      "badge",
      "badge-success",
      "badge-error",
      "badge-warning",
      "badge-info",
      "loading-spinner",
      "toggle-container",
      "toggle-input",
      "toggle-slider",
      "stock-normal",
      "stock-low",
      "stock-zero",
      "out-of-stock"
    ]
  },
  "migration": {
    "tailwindMapping": {
      "colors": {
        "var(--color-primary)": "green-800",
        "var(--color-primary-light)": "green-600",
        "var(--color-text-primary)": "gray-700",
        "var(--color-text-secondary)": "gray-500",
        "var(--color-bg-secondary)": "gray-50",
        "var(--color-success)": "green-600",
        "var(--color-error)": "red-600"
      },
      "spacing": {
        "var(--spacing-xs)": "1",
        "var(--spacing-sm)": "2",
        "var(--spacing-md)": "4",
        "var(--spacing-lg)": "6",
        "var(--spacing-xl)": "8"
      },
      "utilities": {
        "btn-base": "px-6 py-3 rounded-lg font-semibold inline-flex items-center justify-center",
        "btn-primary": "bg-green-800 text-white hover:bg-green-700",
        "text-primary": "text-gray-700",
        "flex": "flex",
        "items-center": "items-center"
      }
    },
    "cssVariablesToTailwind": {
      "instructions": "Para migrar a Tailwind CSS:",
      "steps": [
        "1. Configurar tailwind.config.js con los colores del sistema",
        "2. Reemplazar clases CSS con utilidades de Tailwind",
        "3. Usar @apply para componentes complejos",
        "4. Mantener variables CSS para valores dinámicos"
      ]
    }
  },
  "files": {
    "main": "src/styles/globals.css",
    "base": "src/styles/index.css",
    "app": "src/styles/App.css",
    "documentation": "src/styles/README.md",
    "migration": {
      "example": "src/styles/migration-example.css",
      "script": "src/styles/migration-script.js"
    }
  },
  "usage": {
    "installation": "Import globals.css in your main CSS file",
    "basicButton": "<button class=\"btn-base btn-primary\">Click me</button>",
    "formField": "<div class=\"form-field\"><label class=\"form-label\">Name</label><input class=\"form-input\" /></div>",
    "card": "<div class=\"card\"><div class=\"card-header\"><h3>Title</h3></div><div class=\"card-body\">Content</div></div>",
    "layout": "<div class=\"flex items-center justify-between gap-md\">Layout</div>"
  },
  "maintenance": {
    "addColor": "Add new color to :root variables in globals.css",
    "addComponent": "Create new component class following existing patterns",
    "updateSpacing": "Modify spacing variables and update all references",
    "testing": "Test changes across all components using the system"
  }
}